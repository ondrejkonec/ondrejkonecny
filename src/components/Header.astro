---
import Navigation from './Navigation.astro';
---
<header class="header">
  <a class="header__logo" href="/" aria-label="go to homepage">Ondřej Konečný</a>
  <Navigation />
</header>

<style> 
  .header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    max-width: 95vw;
    height: 80px;
    margin-inline: auto;
  }
  .header__logo {
    font-size: 21px;
    color: #121212;
    margin-right: 3.2rem;
    text-decoration: none;
    text-transform: uppercase;
    font-weight: 500;
  }
</style>
