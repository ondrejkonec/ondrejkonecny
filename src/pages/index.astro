  </div>

  <h2>Blog</h2>
  <ul>
    {
      allPosts.map((post) => (
        <BlogPost url={post.url} title={post.frontmatter.title} />
      ))
    }
  </ul>
</BaseLayout>

<style>
  h2 {
    margin-top: 4rem;
  }
  img {
    float: right;
    width: 264px;
    shape-outside: circle(calc(50% + 1rem));
    padding-left: 20px;
    margin-right: -90px;
  }
  .lead {
    font-weight: 700;
    line-height: 1.383;
    font-size: 35px;
    max-width: 900px;
  }
  p {
    font-size: 21px;
    hyphens: auto;
    max-width: 710px;
  }
</style>
