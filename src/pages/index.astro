---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
const allPosts = await Astro.glob("../pages/blog/*/*md");
allPosts.sort((a, b) => Date.parse(b.frontmatter.pubDate) - Date.parse(a.frontmatter.pubDate)); // sort blog post 
const pageTitle = null;
---

<BaseLayout pageTitle={pageTitle}>
  <h1 class="screen-reader-only">Homepage</h1>
  <div>
    <img
      src="/images/profile-picture.png"
      alt="photo of me from my wedding where I look happy"
    />
    <p class="lead">
      Hey! I’m Ondřej Konečný. I design and build software mostly for the Web and mobile.</p>
      <p>I'm based in Prague, Czech
      Republic and working remotely for <a href="https://www.cloudtalk.io/"
        >CloudTalk</a
      >.<br>You can easily <a href="mailto:ondrej.konecny@gmail.com"
        >email me</a
      >, or&nbsp;get in touch via <a href="https://twitter.com/ondrejkonec">Twitter</a> or <a
        href="https://linkedin.com//in/ondrejkonec">LinkedIn</a
      >.
    </p>
  </div>

  <h2>Blog</h2>
  <ul>
    {
      allPosts.map((post) => (
        <BlogPost url={post.url} title={post.frontmatter.title} />
      ))
    }
  </ul>
</BaseLayout>

<style>
  h2 {
    margin-top: 4rem;
  }
  img {
    float: right;
    width: 214px;;
    shape-outside: circle(calc(50% + 1rem));
    padding-left: 20px;
    margin-right: -104px;
  }
  .lead {
    font-weight: 700;
    line-height: 1.2383;
    font-size: 30px;
    max-width: 900px;
  }
  p {
    hyphens: auto;
  }
</style>
